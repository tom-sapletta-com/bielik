# Bielik Configuration File
# Copy this file to .env and modify values as needed

# HuggingFace Model Configuration
HF_MODEL_PATH=/path/to/your/model.gguf
BIELIK_MODEL=SpeakLeash/bielik-7b-instruct-v0.1-gguf
HF_HOME=~/.cache/huggingface

# Model Execution Settings
MODEL_CONTEXT_SIZE=2048
MODEL_MAX_TOKENS=512
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.9
MODEL_GPU_LAYERS=0

# Dynamic Temperature Scaling (proportional to prompt length)
# When enabled: short prompts get MAX_TEMP, long prompts (>=MAX_LEN) get MIN_TEMP
# Linear interpolation between MIN_LEN and MAX_LEN
TEMP_SCALE_ENABLED=true
TEMP_SCALE_MIN_TEMP=0.2
TEMP_SCALE_MAX_TEMP=1.0
TEMP_SCALE_MIN_LEN=10
TEMP_SCALE_MAX_LEN=200

# Auto-setup Behavior
AUTO_SETUP_ENABLED=true
INTERACTIVE_SETUP=true
AUTO_DOWNLOAD_MODEL=false

# Logging Configuration
# WARNING = show only warnings and errors (quiet mode, recommended)
# INFO = show all informational messages (verbose)
# DEBUG = show detailed debug information
LOG_LEVEL=WARNING
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_TO_FILE=false
LOG_FILE_PATH=./bielik.log

# Content Processing Configuration
FETCH_URLS_AUTO=true
CONVERT_DOCUMENTS_AUTO=true
MAX_URL_CONTENT_LENGTH=100000
MAX_DOCUMENT_SIZE_MB=10

# Security Settings
ALLOW_FILE_ACCESS=true
ALLOWED_FILE_EXTENSIONS=.txt,.md,.pdf,.docx,.html,.htm
BLOCKED_DOMAINS=

# Performance Settings
REQUEST_TIMEOUT=30
MODEL_TIMEOUT=300
SETUP_TIMEOUT=1800

# Development Settings
DEBUG_MODE=false
VERBOSE_OUTPUT=false

# Bielik CLI Settings
BIELIK_CLI_USERNAME="User"
BIELIK_CLI_ASSISTANT_NAME="bielik-4.5b"
BIELIK_CLI_CURRENT_MODEL="SpeakLeash/bielik-4.5b-v3.0-instruct-gguf"
BIELIK_CLI_AUTO_SWITCH="true"
BIELIK_CLI_USE_LOCAL="false"
BIELIK_CLI_FALLBACK_TO_HF="true"
