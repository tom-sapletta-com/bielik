# Bielik Configuration File
# Copy this file to .env and modify values as needed

# Ollama Server Configuration
OLLAMA_HOST=http://localhost:11434
BIELIK_MODEL=SpeakLeash/bielik-7b-instruct-v0.1-gguf

# Auto-setup Behavior
AUTO_SETUP_ENABLED=true
INTERACTIVE_SETUP=true
INSTALL_OLLAMA_AUTO=true
PULL_MODEL_AUTO=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_TO_FILE=false
LOG_FILE_PATH=./bielik.log

# Content Processing Configuration
FETCH_URLS_AUTO=true
CONVERT_DOCUMENTS_AUTO=true
MAX_URL_CONTENT_LENGTH=100000
MAX_DOCUMENT_SIZE_MB=10

# Security Settings
ALLOW_FILE_ACCESS=true
ALLOWED_FILE_EXTENSIONS=.txt,.md,.pdf,.docx,.html,.htm
BLOCKED_DOMAINS=

# Performance Settings
REQUEST_TIMEOUT=30
MODEL_TIMEOUT=300
SETUP_TIMEOUT=1800

# Development Settings
DEBUG_MODE=false
VERBOSE_OUTPUT=false
