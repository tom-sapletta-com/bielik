{
  "name": "@bielik/folder-command",
  "version": "1.0.0",
  "description": "Analyze directory contents and provide context for AI processing",
  "main": "main.py",
  "type": "bielik-command",
  "keywords": [
    "directory",
    "folder",
    "file-analysis",
    "context-provider",
    "bielik-command",
    "filesystem"
  ],
  "author": "Bielik CLI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tom-sapletta-com/bielik.git",
    "directory": "commands/folder"
  },
  "bugs": {
    "url": "https://github.com/tom-sapletta-com/bielik/issues"
  },
  "homepage": "https://github.com/tom-sapletta-com/bielik#readme",
  "engines": {
    "python": ">=3.8"
  },
  "scripts": {
    "test": "python -m pytest",
    "lint": "flake8 .",
    "format": "black .",
    "validate": "python -c 'import main; print(\"âœ… Module loads successfully\")'"
  },
  "bielik": {
    "category": "filesystem",
    "command_type": "context_provider",
    "usage_format": "folder: <directory_path>",
    "aliases": ["dir", "directory"],
    "mcp_enabled": false,
    "examples": [
      {
        "command": "folder: ~/documents",
        "description": "Analyze home documents directory"
      },
      {
        "command": "folder: /path/to/project",
        "description": "Analyze project directory"
      },
      {
        "command": "folder: .",
        "description": "Analyze current directory"
      }
    ],
    "help_topics": [
      {
        "topic": "directory_analysis",
        "description": "Provides file counts, types, sizes, and structure overview"
      },
      {
        "topic": "context_provider",
        "description": "Generates context data for AI to answer follow-up questions"
      },
      {
        "topic": "usage_workflow",
        "description": "Run folder: command first, then ask AI questions about the directory"
      }
    ],
    "output_format": {
      "type": "structured_context",
      "contains": [
        "directory_path",
        "file_summary",
        "folder_summary",
        "file_types_distribution",
        "largest_files",
        "directory_structure"
      ]
    },
    "ai_integration": {
      "provides_context": true,
      "context_types": ["directory_analysis", "file_system"],
      "follow_up_capable": true
    }
  }
}
