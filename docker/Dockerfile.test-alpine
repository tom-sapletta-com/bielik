# Alpine Linux test environment for Bielik CLI
FROM alpine:3.19

# Install system dependencies
RUN apk add --no-cache \
    python3 \
    python3-dev \
    py3-pip \
    py3-virtualenv \
    git \
    build-base \
    curl \
    wget \
    ca-certificates \
    gcc \
    musl-dev \
    linux-headers

# Set working directory
WORKDIR /app

# Copy project files
COPY . .

# Install Bielik with Context Provider Commands (skip AI models)
RUN python3 install.py --skip-ai

# Test command for verification
CMD ["python3", "run.py", "--info"]
