# CentOS Stream 9 test environment for Bielik CLI
FROM quay.io/centos/centos:stream9

# Install system dependencies
RUN dnf install -y \
    python3 \
    python3-pip \
    python3-virtualenv \
    git \
    gcc \
    gcc-c++ \
    make \
    curl \
    wget \
    ca-certificates \
    && dnf clean all

# Set working directory
WORKDIR /app

# Copy project files
COPY . .

# Install Bielik with Context Provider Commands (skip AI models)
RUN python3 install.py --skip-ai

# Test command for verification
CMD ["python3", "run.py", "--info"]
