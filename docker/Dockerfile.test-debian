# Debian 12 (Bookworm) test environment for Bielik CLI
FROM debian:12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    git \
    build-essential \
    curl \
    wget \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy project files
COPY . .

# Install Bielik with Context Provider Commands (skip AI models)
RUN python3 install.py --skip-ai

# Test command for verification
CMD ["python3", "run.py", "--info"]
